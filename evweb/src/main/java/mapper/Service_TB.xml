	<select id="categorySelect" resultType="servicetb"
		parameterType="String">
		select * from service_tb where
		board_category=#{board_category} order by board_no desc
	</select>

	<update id="updateState">
		update service_tb set board_state = '완료' where
		board_no = #{board_no}
	</update>

	<!-- =========== 1:1문의하기에서 파일첨부하기 ========== -->
	<!-- 공지사항 파일첨부기능 => notice_no은 공지사항 게시글번호이므로 0번으로 넘겨버림 -->
	<insert id="fileinsert" parameterType="java.util.List">
		insert all
		<foreach collection="list" item="file" separator=" ">
			into file_tb
			values
			(#{file.file_no}, service_tb_seq.currval,
			#{file.storeFilename}, #{file.originalFilename}, '1:1문의', 0)
		</foreach>
		select * from dual
	</insert>
	
	
	
	<!-- ==================페이징================ -->
	<select id="listPage" resultType="servicetb" parameterType="SearchCriteria">
		select * from
		(
		select ROW_NUMBER() OVER(ORDER BY board_no DESC) as rn, board_no, manager_id, board_category, board_title, board_content, board_date, board_state, customer_id
		from service_tb
		where 1=1
		<include refid="search"></include>
		) MP
		where rn BETWEEN #{rowStart} AND #{rowEnd}
		order by board_no desc
		
	</select>
	
	
	<select id="listCount" parameterType="SearchCriteria" resultType="int">
		select count(board_no) 
		from service_tb
		WHERE 1=1
		<include refid="search"></include>	
		AND board_no > 0
	</select>
	
	
	<sql id="search">
		<if test="searchType != null">
			<if test="searchType == 't'.toString()">AND board_TITLE LIKE '%' || #{keyword} || '%'</if>
			<if test="searchType == 'c'.toString()">AND board_CONTENT LIKE '%' || #{keyword} || '%'</if>
			<if test="searchType == 'w'.toString()">AND manager_id LIKE '%' || #{keyword} || '%'</if>
			<if test="searchType == 'tc'.toString()">AND (board_TITLE LIKE '%' || #{keyword} || '%') or (board_CONTENT LIKE '%' || #{keyword} || '%')</if>
			<if test="searchType == 'ctgr'.toString()">AND board_category LIKE '%' || #{keyword} || '%'</if>
		</if>
	</sql>
	<!-- ==================내 문의내역 확인================ -->
	<select id="selectbyId" resultType="servicetb" parameterType="Map">
		select * from
		(
		select ROW_NUMBER() OVER(ORDER BY board_no DESC) as rn, board_no, manager_id, board_category, board_title, board_content, board_date, board_state, customer_id
		from service_tb
		<where>
			<if test="type == '관리자'">
				manager_id = #{id}
			</if>
			<if test="type == '회원'">
				customer_id = #{id}
			</if>
		</where>
		<include refid="search"></include>
		) MP
		where rn BETWEEN #{rowStart} AND #{rowEnd}
		order by board_no desc
	</select>
	
	<select id="listCountId" parameterType="Map" resultType="int">
		select count(board_no) 
		from service_tb
		<where>
			<if test="type == '관리자'">
				manager_id = #{id}
			</if>
			<if test="type == '회원'">
				customer_id = #{id}
			</if>
		</where>
		<include refid="search"></include>	
		AND board_no > 0
		
	</select>
</mapper>







